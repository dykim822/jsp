		<pattern>/hello/*</pattern>
	</decorator>
	<decorator name="news" page="/decorator/news_decorator.jsp">
		<pattern>/news/*</pattern>
	</decorator>
	<decorator name="top" page="/decorator/topLayout.jspf">
		<pattern>/test/*</pattern>
	</decorator>
	<decorator name="bottom" page="/decorator/bottomLayout.jspf">
		<pattern>/test/*</pattern>
	</decorator>
